<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE de pos.order.line: inserta columna tras product_id -->
    <record id="view_pos_order_line_tree_inherit_src_loc" model="ir.ui.view">
        <field name="name">pos.order.line.tree.inherit.src.location</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_line" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="after">
                <field name="pos_src_location_id"
                    string="UbicaciÃ³n origen"
                    domain="[('usage','=','internal')]"
                    readonly="1"
                    optional="show" />
            </xpath>
        </field>
    </record>

    <!-- FORM de pos.order.line: inserta campo tras product_id en el primer group -->
    <record id="view_pos_order_line_form_inherit_src_loc" model="ir.ui.view">
        <field name="name">pos.order.line.form.inherit.src.location</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_line_form" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//form/group/field[@name='product_id']" position="after">
                <field name="pos_src_location_id"
                    domain="[('usage','=','internal')]"
                    readonly="1" />
            </xpath>
        </field>
    </record>

</odoo>
